<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="no.hiof.coffeecontrol"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.VIBRATE" />

    <uses-feature
        android:name="android.hardware.sensor.accelerometer"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="no.hiof.coffeecontrol.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name="no.hiof.coffeecontrol.service"
            tools:ignore="ExportedService" >
            <intent-filter>
                <action android:name="no.hiof.action.VIBRATE" />
            </intent-filter>
        </service>

        <activity
            android:name="no.hiof.coffeecontrol.CoffeeList"
            android:windowSoftInputMode="adjustPan"
            android:label="@string/title_activity_coffee_list" >
        </activity>
        <activity
            android:name="no.hiof.coffeecontrol.WidgetActivity"
            android:label="@string/title_activity_widget" >
        </activity>
        
        <receiver android:name="no.hiof.coffeecontrol.HelloWidget" android:label="@string/app_name">
            <intent-filter> <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data android:name="android.appwidget.provider" android:resource="@xml/hello_widget_provider" />
        </receiver>
        
    </application>

</manifest>
